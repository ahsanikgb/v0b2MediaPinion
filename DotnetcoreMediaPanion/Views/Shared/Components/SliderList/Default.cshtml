@model IEnumerable<DotnetcoreMediaPanion.ViewModels1.Slider>
@{
    Layout = null;
}



<div class="bend niceties preview-2">

    <div id="ensign-nivoslider" class="slides">
        @foreach (var images in Model)
        {
        <img src="~/web/img/slider/@images.Image" alt="" title="#slider-direction-1" />
  
        }
    </div>
    <!-- direction 1 -->
    @foreach (var item in Model)
    {
        <div id="@item.Title" class="slider-direction @item.Slider1">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="slider-content">
                            <!-- layer 1 -->
                            <div class="layer-1-1 hidden-xs wow slideInDown" data-wow-duration="2s" data-wow-delay=".2s">
                                <h2 class="title1">@item.Heading</h2>
                            </div>
                            <!-- layer 2 -->
                            <div class="layer-1-2 wow slideInUp" data-wow-duration="2s" data-wow-delay=".1s">
                                <h1 class="title2">
                                    @item.Description
                                </h1>
                            </div>
                            <!-- layer 3 -->
                            <div class="layer-1-3 hidden-xs wow slideInUp" data-wow-duration="2s" data-wow-delay=".2s">
                                <a class="ready-btn right-btn page-scroll" href="#services">See Services</a>
                                <a class="ready-btn page-scroll" href="#about">Learn More</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    }
</div>

